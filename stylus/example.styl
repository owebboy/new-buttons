.box
	width 25px
	height 25px
	display inline-block
	border 0
	transition .1s all
	&:hover
		background black

.ex-red 
	background red
.ex-blue 
	background blue
.ex-green
	background green
.ex-black
	background black
.ex-violet 
	background violet
.ex-pink 
	background pink
.ex-sky-blue
	background sky-blue
	
// sizes

.size
	border 0
	background none

.ex-s
